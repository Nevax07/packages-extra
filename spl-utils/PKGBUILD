pkgname=('spl-utils')
pkgver=0.7.0
_pkgver=spl-0.7.0
pkgrel=1
pkgdesc='Solaris Porting Layer User-Mode utils'
arch=('i686' 'x86_64')
url='http://zfsonlinux.org/'
source=(https://github.com/zfsonlinux/spl/archive/spl-${pkgver}.tar.gz
        spl-utils.hostid)
groups=('manjarozfs')
sha256sums=('a450912776e2f5541e52f14ebba3d9c00beec109854d47898d1f51d5c1c539df'
            'ad95131bc0b799c0b1af477fb14fcf26a6a9f76079e48bf090acb7e8367bfd0e')
license=('CDDL')

build() {
  cd ${srcdir}/spl-$_pkgver
  ./autogen.sh
  ./configure --prefix=/usr --libdir=/usr/lib --sbindir=/usr/bin \
              --with-config=user
  make
}

package() {
  cd ${srcdir}/spl-$_pkgver
  make DESTDIR=${pkgdir} install

  install -D -m644 ${srcdir}/spl-utils.hostid ${pkgdir}/etc/hostid
}
