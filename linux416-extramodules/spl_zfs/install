post_install() {
  EXTRAMODULES='extramodules-4.16-MANJARO'
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}

post_upgrade() {
  EXTRAMODULES='extramodules-4.16-MANJARO'
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}

post_remove() {
  EXTRAMODULES='extramodules-4.16-MANJARO'
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}
