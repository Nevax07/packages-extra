pkgname=exo-gtk3
_pkgname=exo
pkgver=0.11.3
pkgrel=2
pkgdesc="Extensions to Xfce by os-cillation"
arch=('i686' 'x86_64')
url="http://www.xfce.org/"
license=('GPL2' 'LGPL')
groups=('xfce4-gtk3')
depends=('libxfce4ui-gtk3' 'perl-uri' 'hicolor-icon-theme')
makedepends=('intltool' 'gtk-doc' 'xfce4-dev-tools')
provides=($_pkgname)
conflicts=($_pkgname)
_commit=0f22ff6df412f63520f1dc5b2345c2be2800bd19
source=(https://git.xfce.org/xfce/$_pkgname/snapshot/$_pkgname-$_commit.tar.bz2)
sha256sums=('a19eb00b901df9f66786c7548c0ec353ee8f37d5df685b2c3b239bc40538a414')

prepare() {
  cd "$srcdir/$_pkgname-$_commit"
}

build() {
  cd "$srcdir/$_pkgname-$_commit"

  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --enable-gtk-doc \
    --disable-debug
  make
}

package() {
  cd "$srcdir/$_pkgname-$_commit"
  make DESTDIR="$pkgdir" install
}
