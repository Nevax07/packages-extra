_pkgname=xfce4-notifyd
_commit=344947b0f524f4f8684c6432ab75087fcae3047f
pkgname=$_pkgname-gtk3
pkgver=0.4.0
pkgrel=1
pkgdesc="Notification daemon for the Xfce desktop"
arch=('i686' 'x86_64')
url="http://goodies.xfce.org/projects/applications/xfce4-notifyd"
license=('GPL2')
groups=('xfce4-gtk3-goodies')
depends=('exo-gtk3' 'libxfce4ui-gtk3' 'libnotify' 'hicolor-icon-theme')
makedepends=('intltool' 'python' 'xfce4-dev-tools')
conflicts=("$_pkgname")
provides=("$_pkgname")
source=(https://git.xfce.org/apps/$_pkgname/snapshot/$_pkgname-$_commit.tar.bz2)
sha256sums=('2d00e49c2eecbf308a00aca4373be5c815f8668eec8732317e6b364045151db8')

build() {
  cd "$srcdir/$_pkgname-$_commit"

  ./autogen.sh \
    --prefix=/usr \
    --disable-static \
    --disable-debug
  make
}

package() {
  cd "$srcdir/$_pkgname-$_commit"
  make DESTDIR="$pkgdir" install
}
