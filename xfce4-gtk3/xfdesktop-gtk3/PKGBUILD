# Maintainer: Bernhard Landauer <oberon@manjaro.org>
# Maintainer: Evangelos Foutras <evangelos@foutrelis.com>
# Contributor: tobias <tobias funnychar archlinux.org>

pkgname=xfdesktop-gtk3
_pkgname=xfdesktop
pkgver=4.13.1
pkgrel=6
pkgdesc="A desktop manager for Xfce"
arch=('i686' 'x86_64')
url="http://www.xfce.org/"
license=('GPL2')
groups=('xfce4-gtk3')
depends=('exo-gtk3'
    'garcon-gtk3'
    'hicolor-icon-theme'
    'libwnck3'
    'libxfce4ui-gtk3'
    'thunar-gtk3')
makedepends=('intltool' 'xfce4-dev-tools')
conflicts=('xfce4-menueditor' "$_pkgname")
provides=("$_pkgname")
replaces=('xfce4-menueditor')
_commit=795eec8d3c05ac0b04b5a06c78590ad806f1ad3d
source=(https://git.xfce.org/xfce/xfdesktop/snapshot/xfdesktop-$_commit.tar.bz2)
sha256sums=('82a46545d40573ab7351c11bfc035c3fa2cdccbfd112d72f93fd1889145f3a87')

prepare() {
  cd "$srcdir/$_pkgname-$_commit"
}

build() {
  cd "$srcdir/$_pkgname-$_commit"

  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --enable-gio-unix \
    --enable-thunarx \
    --enable-notifications \
    --disable-debug
  make
}

package() {
  cd "$srcdir/$_pkgname-$_commit"
  make DESTDIR="$pkgdir" install
}
