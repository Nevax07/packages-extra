msg() {
ALL_OFF="\e[1;0m"
BOLD="\e[1;1m"
GREEN="${BOLD}\e[1;32m"
local mesg=$1; shift
printf "\n${GREEN} ==>${ALL_OFF}${BOLD} ${mesg}${ALL_OFF}" "$@" >&2
}

post_install() {
msg "gtk3-classic disables Client Side Decorations by default !
  -> They are needed for GNOME desktop with Wayland !
  -> To enable CSD set environment variable 'GTK_CSD=1'.
  "
}

post_upgrade() {
  post_install
}
