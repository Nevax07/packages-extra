pkgname=("zfs-dkms")
pkgver=0.7.4
pkgrel=1
pkgdesc="Kernel modules for the Zettabyte File System."
depends=("spl-dkms=${pkgver}" "zfs-utils=${pkgver}" "dkms")
arch=("any")
url="http://zfsonlinux.org/"
source=(https://github.com/zfsonlinux/zfs/releases/download/zfs-${pkgver}/zfs-${pkgver}.tar.gz)
groups=("manjarozfs")
sha256sums=('9536a9be5d05329570afc9fc168be45cd38f832e2e7ede15f2c5cd223beb16d3')
license=("CDDL")
install=zfs-dkms.install

prepare() {
 cd "$srcdir/zfs-${pkgver}"
 # patches here
}

build() {
  cd "$srcdir/zfs-${pkgver}"
  ./autogen.sh
  scripts/dkms.mkconf -v ${pkgver} -f dkms.conf -n zfs
}


package() {
   install -d ${pkgdir}/usr/src/zfs-${pkgver}
   cp -a ${srcdir}/zfs-${pkgver}/ ${pkgdir}/usr/src/
}
